{
  "compilerOptions": {
    "target": "ES2022",
  "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  "outDir": "dist",
  "rootDir": "..",
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "shared/*": ["shared/*"]
    }
  },
  "include": ["src", "../shared/types.ts"],
  "exclude": ["node_modules", "dist"]
}
